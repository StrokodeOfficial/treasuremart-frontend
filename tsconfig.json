{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
		"strictNullChecks": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@lib/*": ["lib/*"],
			"@components/*": ["components/*"],
			"@layouts/*": ["layouts/*"],
			"@styles/*": ["styles/*"],
			"@utils/*": ["utils/*"],
			"@pages/*": ["pages/*"],
			"@assets/*": ["assets/*"],
			"@locales/*": ["locales/*"],
		},
	},
}
